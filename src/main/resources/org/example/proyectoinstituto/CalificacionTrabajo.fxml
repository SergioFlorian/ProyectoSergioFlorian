<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectoinstituto.CalificarTrabajoController">
    <children>
        <Label layoutX="115.0" layoutY="20.0" text="Calificación de Trabajo">
            <font>
                <Font name="Times New Roman" size="18.0" />
            </font>
        </Label>

        <ComboBox fx:id="alumnoComboBox" layoutX="140.0" layoutY="60.0" prefWidth="120.0" />

        <Label layoutX="60.0" layoutY="105.0" text="Calificación:">
            <font>
                <Font name="Times New Roman" size="14.0" />
            </font>
        </Label>

        <TextField fx:id="calificacionField" layoutX="140.0" layoutY="100.0" prefWidth="120.0" />

        <Button layoutX="110.0" layoutY="140.0" mnemonicParsing="false" onAction="#calificar" prefHeight="35.0" prefWidth="88.0" text="Calificar" />
        <Button layoutX="210.0" layoutY="140.0" mnemonicParsing="false" onAction="#cerrar" prefHeight="35.0" prefWidth="88.0" text="Cancelar" />
    </children>
</AnchorPane>
